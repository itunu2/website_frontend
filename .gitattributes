# Auto detect text files and perform LF normalization
* text=auto

# Source code
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.md text eol=lf
*.css text eol=lf
*.scss text eol=lf

# Configs
.env.local text eol=lf
.env.example text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf
tsconfig.json text eol=lf
next.config.* text eol=lf

# Documentation
*.md text eol=lf
LICENSE text eol=lf

# Exclude files from export/archive
.gitattributes export-ignore
.gitignore export-ignore
.eslintrc.* export-ignore
eslint.config.* export-ignore
.prettierrc export-ignore
tests/ export-ignore
*.test.ts export-ignore
*.test.tsx export-ignore
playwright.config.ts export-ignore
jest.config.ts export-ignore
jest.setup.ts export-ignore
